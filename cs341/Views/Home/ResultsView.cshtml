@*
    Results View
*@
@using cs341.Structures
@model cs341.Models.ResultsViewModel

<div id="browse">
    <h1 class="heading">Browse</h1>
    <!--
          Category menus currently includes:
          - Categories that our board games are classified into

          TODO:
          -link tabs to "shop by catagory" page
          -make catagories
      -->
    <div class="categoryMenus" id="categoryMenus">
        <h3>Shop by Category:</h3>
        <div class="category">
            <img src="images/Placeholder.png" class="menuImg">
            <span>Catagory Caption</span>
        </div>
    </div>
    <div id="results">
        @foreach (Item item in Model.Items)
        {
            <div class="results-item">
                <div class="results-item-name">@item.Name</div>
                <div class="results-item-price">@item.Price</div>
            </div>
        }
    </div>
</div>