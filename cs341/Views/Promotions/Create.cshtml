@model cs341.Models.Promotion

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Promotion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
